<div id="<%= dom_id task %>" class="level<%= ' --done' if task.done %>">
  <div class="level-left">
    <p class="level-item"><%= task.name %></p>
  </div>
  <div class="level-right">
    <div class="buttons is-grouped">
      <%= link_to edit_task_path(task), class: "button" do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <%= button_to done_task_path(task), class: "button" do %>
        <i class="far fa-check-circle"></i>
      <% end %>
      <%= button_to task_path(task), method: "delete", class: "button", data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
  </div>
</div>
